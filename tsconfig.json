{
  "extends": "@tsconfig/react-native/tsconfig.json",
  "compilerOptions": {
    "baseUrl": "./",
    "paths": {
        "*": ["src/*"],
        "assets/*": ["assets/*"],
        "@api/*": ["src/api/*"],
        "@components/*": ["src/components/*"],
        "@screens/*": ["src/screens/*"],
        "@types/*": ["src/types/*"],
        "@utils/*": ["src/utils/*"],
    }
  }
}
